﻿﻿@using BinaAz.Models.ViewModels
@model AppUserRegister
<div class="mb-4 pb-4"></div>
<section class="login-register container">
    <ul class="nav nav-tabs mb-5" id="login_register">
        <li class="nav-item" role="presentation">
            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" asp-controller="Account" asp-action="SignUp">Register</a>
        </li>
    </ul>
    <div class="tab-content pt-2" id="login_register_tab_content">

        <div class="fade show active">
            <div class="register-form">
                <form asp-action="SignUp" method="post" class="needs-validation" novalidate>
                    <div class="form-floating mb-3">
                        <input asp-for="Username" type="text" class="form-control form-control_gray" id="customerNameRegisterInput" placeholder="Username" required>
                        <label asp-for="Username">Username</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Name" type="text" class="form-control form-control_gray" id="customerNameRegisterInput" placeholder="Name" required>
                        <label asp-for="Name">Name</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Surname" type="text" class="form-control form-control_gray" id="customerNameRegisterInput" placeholder="Surname" required>
                        <label for="customerNameRegisterInput">Surname</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" type="email" class="form-control form-control_gray" id="customerEmailRegisterInput" placeholder="Email address *" required>
                        <label for="customerEmailRegisterInput">Email address *</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control form-control_gray" id="customerPasswodRegisterInput" placeholder="Password *" required>
                        <label for="customerPasswodRegisterInput">Password *</label>
                    </div>
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="d-flex align-items-center mb-3 pb-2">
                        <p class="m-0">Your personal data will be used to support your experience throughout this website, to manage access to your account, and for other purposes described in our privacy policy.</p>
                    </div>

                    <button class="btn btn-primary w-100 text-uppercase" type="submit">Register</button>
                </form>
            </div>
        </div>
    </div>
</section>