@model AttributeViewModel
<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Dashboard</a></li>
                            <li><a asp-area="Admin" asp-controller="Product" asp-action="GetProduct">Table</a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        @if (Model.ProductAttributes.Count == 0)
                        {
                            <div class="alert alert-success" role="alert"> Their isn't anything. </div>
                        }
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Value</th>
                                    <th>Operations</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ProductAttributes)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@item.Value</td>
                                        <td class="fs-5">
                                            <a asp-area="Admin" asp-controller="Product" asp-action="DeleteAttribute" asp-route-id="@item.Id"><i class="fa fa-trash ms-3 h-50 d-inline-block"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <div class="card">
                <form asp-controller="Product" asp-action="AddAttribute" method="post" enctype="multipart/form-data" class="col-lg-8">

                    <div class="card-body card-block" >
                        <input type="hidden" asp-for="@Model.ProductId" />
                        <div class="form-group">
                            <label asp-for="productAttribute.Name">Attribute Name</label>
                            <input type="text" id="file-input" asp-for="productAttribute.Name" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="productAttribute.Value">Attribute Value </label>
                            <input type="text" id="file-input" asp-for="productAttribute.Value" class="form-control">
                        </div>
                        <label class="form-check-label" asp-for="productAttribute.IsActive">Activation</label>
                        <div class="form-check form-switch fs-4">
                            <input class="form-check-input" type="checkbox" asp-for="productAttribute.IsActive" checked>
                        </div><br />
                    </div>
                    <button type="submit" class="btn btn-lg btn-info btn-block">
                        <span id="payment-button-amount">Add</span>
                        <span id="payment-button-sending" style="display:none;">Sending…</span>
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>