@model List<Product>
<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Dashboard</a></li>
                            <li><a href="#">Table</a></li>
                            <li class="active">Data table</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Products</strong>
                        <a asp-area="Admin" asp-controller="Product" asp-action="Add" class="btn btn-primary">Add Product</a>
                    </div>
                    <div class="card-body">
                        @if (Model.Count == 0)
                        {
                            <div class="alert alert-success" role="alert"> Their isn't anything. </div>
                        }
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Category</th>
                                    <th>Room Count</th>
                                    <th>Operations</th>
                                    <th>Images</th>
                                    <th>Attributes</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@item.Price</td>
                                        <td>@item.Category.Name</td>
                                        <td>@item.RoomCount</td>
                                        <td class="fs-5">
                                            <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil ms-1"></i></a>
                                            <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash ms-3"></i></a>
                                            <a asp-area="Admin" asp-controller="Product" asp-action="Details" asp-route-id="@item.Id"><i class="fa  fa-info-circle ms-3"></i></a>
                                        </td>
                                        <td><a asp-area="Admin" asp-controller="Product" asp-action="Image" asp-route-id="@item.Id" class="btn btn-primary">Images</a></td>
                                        <td><a asp-area="Admin" asp-controller="Product" asp-action="Attributes" asp-route-id="@item.Id" class="btn btn-warning">Attributes</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>